{
  "compilerOptions": {
    "outDir": "static/js",
    "rootDir": "src",
    "removeComments": true,
    "target": "es6",
    "module": "es2015",
    "lib": [ "es2018", "dom", "es2015.promise" ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
  }
}