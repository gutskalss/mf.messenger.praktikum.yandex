{
  "compilerOptions": {
    "outDir": "build/js",
    "rootDir": "src",
    "removeComments": true,
    "target": "es6",
    "module": "es2015",
    "lib": [ "es2017", "dom", "es2015.promise", "DOM.Iterable" ],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "plugins": [
			{
				"transform": "@build-script/typescript-transformer-append-js-extension"
			}
		],
		"typeRoots": ["./node_modules/@types"]
  },
}